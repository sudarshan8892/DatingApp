@model DatingApp.Models.ViewModel

<link href="~/cardview/cardview.css" rel="stylesheet" />
<script src="~/tabs/jquery.min.js"></script>
<script src="~/js/filter/filter.js"></script>

<div class="container">

    <div class="d-flex justify-content-center mt-1 mb-2">
        <form class="d-flex mt-3" autocomplete="off" id="Filter" onsubmit="filterclick(); return false;">
            <div class="d-flex mx-2">
                <label class="col-form-label-sm">Age from:</label>
                <input class="form-control ms-1" id="MinAge" name="MinAge" style="width:70px" type="number" value="@Model.Pagination.MinAge">
            </div>
            <div class="d-flex mx-2">
                <label class="col-form-label-sm">Age to:</label>
                <input class="form-control ms-1" id="MaxAge" name="MaxAge" style="width:70px" type="number" value="@Model.Pagination.MaxAge">
            </div>
            <div class="d-flex px-2">
                <label class="col-form-label-me-2">Gender:</label>
                <select class="form-select ms-1" id="Gender" name="Gender" style="width:130px">
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                </select>
            </div>
            <input type="hidden" id="OrderBy" name="OrderBy" />
            <button class="btn btn-primary ms-1" type="submit">Apply filter</button>
            <button class="btn btn-info ms-1" type="button" id="resetFilterButton">Reset filter</button>
            <button class="btn btn-primary ms-1" type="button" id="lastActiveButton">Last Active</button>
            <button class="btn btn-primary ms-1" type="button" id="createdButton">Created</button>
        </form>
    </div>
    <div id="results">
        <Partial name="PartialView" />
    </div>
   
</div>
<script type="text/javascript">
    $('#lastActiveButton').on('click', function () {
        $('#OrderBy').val('LastActive');
        filterclick();
    });

    $('#createdButton').on('click', function () {
        $('#OrderBy').val('Created');
        filterclick();
    });
    $('#resetFilterButton').on('click', function () {
        $('#MinAge').val('@Model.Pagination.MinAge');
        $('#MaxAge').val('@Model.Pagination.MaxAge');
        $('#Gender').val('@Model.Pagination.Gender');
        $('#OrderBy').val('');
        filterclick();
    });
</script>