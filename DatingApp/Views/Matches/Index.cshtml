@model DatingApp.Models.ViewModel
<link href="~/cardview/cardview.css" rel="stylesheet" />
<script src="~/tabs/jquery.min.js"></script>

<div class="container">
    <div class="text-center mt-1">
        <h2 class="fst-italic"><b>Your Match  @Model.Pagination.TotalItems found</b></h2>
    </div>
    @*     data-ajax="true" data-ajax-method="post" data-ajax-url="@Url.Action("Matches", "Index"*@
    <div class="d-flex justify-content-center mt-1 mb-2">
        <form class="d-flex mt-3" autocomplete="off" id="Filter">
            <div class="d-flex mx-2">
                <label class="col-form-label-sm">Age from:</label>
                <input class="form-control ms-1" name="MinAge" style="width:70px" type="number" value="@Model.Pagination.MinAge">
            </div>
            <div class="d-flex mx-2">
                <label class="col-form-label-sm">Age to:</label>
                <input class="form-control ms-1" name="MaxAge" style="width:70px" type="number" value="@Model.Pagination.MaxAge">
            </div>
            <div class="d-flex px-2">
                <label class="col-form-label-me-2">Gender:</label>
                <select class="form-select ms-1" name="Gender" style="width:130px">
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                </select>
            </div>

            <button class="btn btn-primary ms-1" id="applyFilter" type="submit">Apply filter</button>
            <button class="btn btn-info ms-1" type="reset">Reset filter</button>
            <button class="btn btn-primary ms-1"
                    name="OrderBy"
                    value="LastActive"
                    type="button">
                LastActive
            </button>
            <button class="btn btn-primary ms-1"
                    name="OrderBy"
                    value="created"
                    type="button">
                LastActive
            </button>
        </form>



    </div>


    <div class="row">

        <div class="d-flex justify-content-center">

            @foreach (var item in Model.Users)
            {
                <div class="col-md-2 mb-3">
                    <div class="card">
                        <div class="card-img-wrapper">
                            <img src="@(item.PhotoUrl != null ? item.PhotoUrl : "/image/sample_user_icon.png")" alt="@item.KnownAs" class="card-img-top">

                            <ul class="list-inline member-icons animate text-center">
                                <li class="list-inline-item">
                                    <a href="@Url.Action("UserDetails", "Matches", new { username = item.UserName })">
                                        <i class="fa fa-user fa-2x"></i>
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#">
                                        <i class="fa fa-heart fa-2x"></i>
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#">
                                        <i class="fa fa-envelope fa-2x"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body p-1">
                            <h5 class="card-title text-center mb-1">
                                <i class="fa fa-user me-2"></i>
                                @item.KnownAs, @item.Age
                            </h5>
                            <p class="card-text card-muted text-center">@item.Country</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



@if (Model.Pagination != null)
{
    <div class="d-flex justify-content-center">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item @(Model.Pagination.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.Pagination.CurrentPage - 1 })">Previous</a>
                </li>
                @for (var i = 1; i <= Model.Pagination.TotalPages; i++)
                {
                    <li class="page-item @(Model.Pagination.CurrentPage == i ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { pageNumber = i })">@i</a>
                    </li>
                }
                <li class="page-item @(Model.Pagination.CurrentPage == Model.Pagination.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.Pagination.CurrentPage + 1 })">Next</a>
                </li>
            </ul>
        </nav>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#applyFilter').click(function () {
            debugger
            var form = $('#Filter');
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Matches", "Index")',
                data: form.serialize(),
                success: function (response) {

                    $('#results').html(response);
                },
                error: function () {
                    alert('There was an error applying the filter.');
                }
            });
        });
    });
</script>